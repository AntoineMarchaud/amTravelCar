<resources>

    <!-- Fonts -->
    <style name="H1">
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="H2">
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="H3">
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="H4">
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="H5">
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <!-- fullscreen mode -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="enableEdgeToEdge">true</item>
        <item name="paddingBottomSystemWindowInsets">false</item>

        <!-- corners -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- no error, no information, no focus mode, no hint -->
    <style name="TextFieldSimpleTheme" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

        <!-- global background  -->
        <item name="boxBackgroundColor">@android:color/transparent</item>

        <item name="hintEnabled">true</item>

        <!-- left icon -->
        <item name="startIconTint">@color/dark_1</item>

        <!-- Label -->
        <item name="android:textColorHint">@color/dark_1</item>
        <item name="hintTextColor">@color/dark_1</item>
        <item name="hintTextAppearance">@style/H5</item>

        <!-- bottom line -->
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>

        <!-- Trailing icon (right icon) -->
        <item name="endIconTint">@android:color/black</item>

    </style>


    <!-- TextField -->
    <style name="TextFieldDropTheme" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">

        <!-- global background  -->
        <item name="boxBackgroundColor">@android:color/transparent</item>

        <!-- Label -->
        <item name="android:textColorHint">@color/dark_1</item>
        <item name="hintTextColor">@color/dark_1</item>

        <!-- bottom line -->
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>

        <!-- Trailing icon (right icon) -->
        <item name="endIconTint">@color/dark_1</item>
        <item name="endIconMode">dropdown_menu</item>

    </style>

    <!-- TextInputEditText -->
    <style name="TextFieldInputTheme">
        <!-- Input Text -->
        <item name="android:textColor">@color/dark_1</item>
        <item name="android:textAppearance">@style/H4</item>
    </style>


</resources>